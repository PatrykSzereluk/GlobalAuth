{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=Database/globalauth.db"
  },
  "Redis": {
    "ConnectionString": "localhost:5002"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Jwt": {
    "Issuer": "GlobalAuth",
    "Audience": "frontapi",
    "SigningKey": "asdsad_q2434_ASFDMKLDIFOJI8443ASDBYDSDFGDGFGDSD",
    "ExpirationMinutes": 60
  },
  "RateLimiter": {
    "Rules": [
      {
        "Limit": 5,
        "TimeOfBlock": 60,
        "WindowSeconds": 60,
        "Policy": "login:ip"
      }
    ]
  },
  "VerificationCodes": {
    "VerificationCodes": [
      {
        "Name": "Email",
        "DigitLength": 6,
        "TTL": 10
      }
    ]
  },
  "AllowedHosts": "*"
}
